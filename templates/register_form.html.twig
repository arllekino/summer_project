{% extends 'base.html.twig' %}
{% block title %}Регистрация
{% endblock %}
{% block head %}
	<link rel="stylesheet" href="/style/styleRegisterForm.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
{% endblock %}
{% block content %}
	<form action="/register_user" class="container" name="Form" id="Form">
		<div class="intro">
			<div class="intro__block">
				<h1 class="intro__header">Регистрация</h1>
				{% set message = message|default({}) %}
				{% if message %}
					<div class="status-of-form">
						<span class="status-of-form__mess">{{ message }}</span>
					</div>
				{% endif %}
				<div class="intro__registrate">
					<div class="intro__form-group">
						<input type="text" name="username" id="username" class="intro__input intro__input-username" placeholder="Имя пользователя">
					</div>
					<div class="intro__form-group">
						<input type="email" name="email" id="email" class="intro__input intro__input-email" placeholder="Почта">
					</div>
					<div class="intro__form-group intro__pass">
						<input type="password" name="password" id="password" class="intro__input intro__input-password" placeholder="Пароль (не менее 8 символов)">
						<span class="show-password" id="show-password">
							<i class="fa fa-eye-slash"></i>
						</div>
					</div>
					<div class="intro__section">
						<div class="intro__autorizate">
							<label class="intro__subtitle">Уже есть аккаунт?</label>
							<a href="/login_form" class="intro__but-autorizate">Вход</a>
						</div>
						<button type="submit" class="intro__but intro__but-registrate">OK</button>
					</div>
				</div>
			</div>
		</form>
	{% endblock %}
	{% block javascripts %}
		<script defer src="/script/showPassword.js"></script>
	{% endblock %}
