<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="https://doctrine-project.org/schemas/orm/doctrine-mapping"
    xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="App\Entity\Island" table="island">

        <id name="id" type="integer" column="island_id">
            <generator strategy="IDENTITY" />
        </id>
        
        <field name="islandMatrix" column="island_matrix" type="text" nullable="false" />   
        <field name="food" column="food" type="integer" nullable="false" />   
        <field name="maxFood" column="max_food" type="integer" nullable="false" />   
        <field name="wood" column="wood" type="integer" nullable="false" />   
        <field name="maxWood" column="max_wood" type="integer" nullable="false" />   
        <field name="stones" column="stones" type="integer" nullable="false" />   
        <field name="maxStones" column="max_stones" type="integer" nullable="false" />   
        <field name="warriors" column="warriors" type="integer" nullable="false" />   
        <field name="maxWarriors" column="max_warriors" type="integer" nullable="false" />   
        <field name="villagers" column="villagers" type="integer" nullable="false" />   
        <field name="hammers" column="hammers" type="integer" nullable="false" />   
        <field name="money" column="money" type="integer" nullable="false" />   
        <field name="knowledge" column="knowledge" type="integer" nullable="false" />   

        <one-to-one field="user" target-entity="App\Entity\User" inversed-by="island">
            <join-column name="user_id" referenced-column-name="user_id" />
        </one-to-one>    
    </entity>

</doctrine-mapping>